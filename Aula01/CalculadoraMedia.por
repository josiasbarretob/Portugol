programa {
	funcao inicio() {
		real n1, n2, n3, n4, media
		
		escreva("Favor insira a primeira nota: \n")
		leia (n1)
		escreva("Favor insira a segunda nota: \n")
		leia (n2)
		escreva("Favor insira a terceira nota: \n")
		leia (n3)
		escreva("Favor insira a quarta nota: \n")
		leia (n4)
		media = (n1 + n2 + n3 + n4) / 4
		escreva("Caro, aluno, a sua média das 4 notas foi: ", media)
	}
}
